@model IEnumerable<Category>;
@{
    ViewData["Title"] = "Index";
}

<h1>Index Category </h1>

<div class="container p-3" >
    <div class="row p-4">
        <div class="col-6" >
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end" >
            <a asp-controller="Category" asp-action='Create' class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i> Create new Category
            </a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Catgorey Name
            </th>
            <th>
                Display Order
            </th>
                <th>
                    Edit
                </th>
                 <th>
                     Remove
                </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-outline-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" > <i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td>
                      <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-outline-danger mx-2" asp-controller="Category" asp-action="Remove" asp-route-id="@obj.Id" > <i class="bi bi-pencil-square"></i> Remove</a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>
</table>
</div>